{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ca-demo/services/college": ["libs/services/college/src/index.ts"],
      "@ca-demo/services/forms": ["libs/services/forms/src/index.ts"],
      "@ca-demo/tailwind-preset": ["libs/tailwind-preset/tailwind-preset.js"],
      "colleges/Routes": ["apps/colleges/src/app/remote-entry/entry.routes.ts"],
      "forms/Routes": ["apps/forms/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
